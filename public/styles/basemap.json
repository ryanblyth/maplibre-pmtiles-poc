{
  "version": 8,
  "name": "US z6â€“15 dark (practice)",
  "glyphs": "/assets/fonts/{fontstack}/{range}.pbf",
  "sprite": "http://localhost:8080/assets/sprites/basemap",
  "sources": {
    "us_high": {
      "type": "vector",
      "url": "pmtiles:///tiles/us_z6-15.pmtiles",
      "minzoom": 6,
      "maxzoom": 15
    }
  },
  "layers": [
    {
      "id": "background",
      "type": "background",
      "paint": { "background-color": "#0b0f14" }
    },
    {
      "id": "landcover",
      "type": "fill",
      "source": "us_high",
      "source-layer": "landcover",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "wood", "#0f141b",
          "grass", "#10161e",
          "scrub", "#10161e",
          "cropland", "#0f141b",
          "#0f141b"
        ],
        "fill-opacity": 0.6
      }
    },
    {
      "id": "landuse",
      "type": "fill",
      "source": "us_high",
      "source-layer": "landuse",
      "paint": {
        "fill-color": [
          "match",
          ["get", "class"],
          "park", "#11161d",
          "cemetery", "#11161d",
          "pitch", "#121923",
          "stadium", "#121923",
          "residential", "#0e131a",
          "#0e131a"
        ],
        "fill-opacity": 0.6
      }
    },
    {
      "id": "water",
      "type": "fill",
      "source": "us_high",
      "source-layer": "water",
      "paint": { "fill-color": "#0a2846" }
    },
    {
      "id": "waterway",
      "type": "line",
      "source": "us_high",
      "source-layer": "waterway",
      "paint": {
        "line-color": "#103457",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 0.2, 12, 0.6, 14, 1.0
        ]
      }
    },
    {
      "id": "boundary-country",
      "type": "line",
      "source": "us_high",
      "source-layer": "boundary",
      "filter": ["==", ["get", "admin_level"], 2],
      "paint": {
        "line-color": "#3b82f6",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          2, 0.6, 6, 1.2, 10, 2.0
        ],
        "line-opacity": 0.8
      }
    },
    {
      "id": "boundary-state",
      "type": "line",
      "source": "us_high",
      "source-layer": "boundary",
      "filter": ["==", ["get", "admin_level"], 4],
      "paint": {
        "line-color": "#284a7c",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          4, 0.3, 8, 0.8, 10, 1.2
        ],
        "line-opacity": 0.6
      }
    },
    {
      "id": "road-casing",
      "type": "line",
      "source": "us_high",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["!=", ["get", "brunnel"], "tunnel"],
        ["!=", ["get", "brunnel"], "bridge"],
        ["match", ["get", "class"], ["motorway","trunk","primary","secondary","tertiary","residential","service"], true, false]
      ],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": {
        "line-color": "#0e131a",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 0.5, 12, 1.2, 14, 2.0
        ]
      }
    },
    {
      "id": "road",
      "type": "line",
      "source": "us_high",
      "source-layer": "transportation",
      "filter": [
        "all",
        ["!=", ["get", "brunnel"], "tunnel"],
        ["!=", ["get", "brunnel"], "bridge"],
        ["match", ["get", "class"], ["motorway","trunk","primary","secondary","tertiary","residential","service"], true, false]
      ],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": {
        "line-color": [
          "match", ["get", "class"],
          "motorway", "#3a4657",
          "trunk", "#374251",
          "primary", "#34404f",
          "secondary", "#313b49",
          "tertiary", "#2d3744",
          "residential", "#2a333f",
          "#28313d"
        ],
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          8, 0.4, 12, 1.0, 14, 1.6
        ]
      }
    },
    {
      "id": "bridge",
      "type": "line",
      "source": "us_high",
      "source-layer": "transportation",
      "filter": ["==", ["get", "brunnel"], "bridge"],
      "layout": { "line-cap": "round", "line-join": "round" },
      "paint": {
        "line-color": [
          "match", ["get", "class"],
          "motorway", "#3f4a5b",
          "trunk", "#3a4655",
          "primary", "#374252",
          "secondary", "#343e4c",
          "tertiary", "#303a47",
          "residential", "#2d3542",
          "#2a3240"
        ],
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          10, 0.5, 12, 1.1, 14, 1.8
        ]
      }
    },
    {
      "id": "rail",
      "type": "line",
      "source": "us_high",
      "source-layer": "transportation",
      "filter": ["==", ["get", "class"], "rail"],
      "paint": {
        "line-color": "#222b36",
        "line-width": [
          "interpolate", ["linear"], ["zoom"],
          10, 0.3, 14, 0.8
        ]
      }
    },
    {
      "id": "building",
      "type": "fill",
      "source": "us_high",
      "source-layer": "building",
      "minzoom": 13,
      "paint": {
        "fill-color": "#151a22",
        "fill-outline-color": "#0f141b",
        "fill-opacity": 0.9
      }
    },


    {
      "id": "water-label",
      "type": "symbol",
      "source": "us_high",
      "source-layer": "water_name",
      "layout": {
        "text-field": ["coalesce", ["get", "name:en"], ["get", "name"]],
        "text-size": ["interpolate", ["linear"], ["zoom"], 5, 11, 12, 16],
        "text-font": ["Noto Sans Regular"],
        "symbol-placement": "line"
      },
      "paint": {
        "text-color": "#7aa4d1",
        "text-halo-color": "#0b0f14",
        "text-halo-width": 1.2
      }
    },
    {
      "id": "place",
      "type": "symbol",
      "source": "us_high",
      "source-layer": "place",
      "layout": {
        "text-field": ["coalesce", ["get", "name:en"], ["get", "name"]],
        "text-size": ["interpolate", ["linear"], ["zoom"], 3, 10, 10, 16],
        "text-font": ["Noto Sans Regular"]
      },
      "paint": {
        "text-color": "#d6d9df",
        "text-halo-color": "#0b0f14",
        "text-halo-width": 1.4
      }
    }
  ]
}
